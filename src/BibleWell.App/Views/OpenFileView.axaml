<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:BibleWell.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BibleWell.App.Views.OpenFileView"
             x:DataType="viewModels:OpenFileViewModel">
    <UserControl.Resources>
        <viewModels:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Left" Command="{Binding OpenFileWithMauiFilePickerCommand}">Open...</Button>
        </DockPanel>
        <ListBox DockPanel.Dock="Bottom" ItemsSource="{Binding ErrorMessages}" />
        <Image Source="{Binding Image}" IsVisible="{Binding IsImageVisible}" />
        <TextBox Text="{Binding FileText, Mode=TwoWay}" AcceptsReturn="True" AcceptsTab="True"
                 IsVisible="{Binding IsImageVisible, Converter={StaticResource InverseBooleanConverter}}" />
    </DockPanel>
</UserControl>