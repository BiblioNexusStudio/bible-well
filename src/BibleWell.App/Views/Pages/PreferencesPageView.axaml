<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BibleWell.App.ViewModels.Pages"
    mc:Ignorable="d" 
    d:DesignWidth="492" 
    d:DesignHeight="960"
    x:Class="BibleWell.App.Views.Pages.PreferencesPageView"
    x:DataType="vm:PreferencesPageView"
    x:Name="PreferncesWindow">
    
    <StackPanel
        Margin="20">
        
        <TextBlock>Preferred Settings</TextBlock>
        <ListBox 
            x:Name="Languages"
            ItemsSource="{Binding LanguageList}"
            SelectedItem="{Binding SelectedLanguage}"/>
    </StackPanel>
</UserControl>
