<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BibleWell.App.ViewModels.Pages"
    xmlns:avalonia="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
    xmlns:viewModels="clr-namespace:BibleWell.App.ViewModels"
    mc:Ignorable="d"
    d:DesignWidth="492"
    d:DesignHeight="960"
    d:DataContext="{x:Static viewModels:DesignData.DesignDevPageViewModel}"
    x:Class="BibleWell.App.Views.Pages.DevPageView"
    x:DataType="vm:DevPageViewModel">

    <StackPanel>
        <TextBlock Classes="h2">Dev Page</TextBlock>
        <StackPanel Orientation="Horizontal" Spacing="5">
        <Button Command="{Binding LoadResourceContentAsync}"
            Margin="0 0 0 10">
            Load from SQLite DB
        </Button>
        <avalonia:HtmlPanel Text="{Binding ResourceContentHtml}" />
        </StackPanel>
    </StackPanel>
</UserControl>