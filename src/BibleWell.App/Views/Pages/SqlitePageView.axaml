<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BibleWell.App.ViewModels.Pages"
    mc:Ignorable="d"
    d:DesignWidth="492"
    d:DesignHeight="960"
    x:Class="BibleWell.App.Views.Pages.SqlitePageView"
    x:DataType="vm:SqlitePageViewModel">
    
    <StackPanel>
        <TextBlock Margin="10 20" Text="{Binding Greeting}" /> 
        <TextBlock Text="{Binding TableText}" />
        <Button 
            Command="{Binding GetItemsButtonClickCommand}">
            Fetch Items from DB
        </Button>
        
        <Button 
            Command="{Binding SaveNewItemCommand}">
            Add Item to DB
        </Button>
        
        <DataGrid
            Margin="20" 
            ItemsSource="{Binding ExampleItems}"
            AutoGenerateColumns="True"
            GridLinesVisibility="All"
            BorderThickness="1"
            BorderBrush="Gray">
        </DataGrid>
    </StackPanel>


</UserControl>
