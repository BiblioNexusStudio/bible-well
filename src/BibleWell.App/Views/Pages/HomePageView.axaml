<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BibleWell.App.ViewModels"
    xmlns:resx="clr-namespace:BibleWell.App.Resources"
    mc:Ignorable="d"
    d:DesignWidth="492"
    d:DesignHeight="960"
    x:Class="BibleWell.App.Views.Pages.HomePageView"
    d:DataContext="{x:Static vm:DesignData.DesignHomePageViewModel}"
    x:DataType="vm:Pages.HomePageViewModel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel>
                <Image
                    Source="/Resources/Images/Bible Well_2 Color_PRIMARY_Stack.png"
                    Margin="30 40 30 50"
                    Stretch="UniformToFill" />
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 10">
                    <TextBlock
                        Text="{x:Static resx:AppResources.HomePage_CurrentExperience}"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"/>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Padding="5 0 0 0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{Binding CurrentExperience}" />
                </StackPanel>
                <Button
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource Bw-Transparent}"
                    BorderBrush="{DynamicResource Bw-Secondary}"
                    BorderThickness="2"
                    Margin="25 0 25 25"
                    Padding="0 10">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <Image Width="25" Height="25" HorizontalAlignment="Center">
                            <Image.Source>
                                <SvgImage Source="{DynamicResource HomePageUserExperience}" />
                            </Image.Source>
                        </Image>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="10 0 0 0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{x:Static resx:AppResources.HomePage_ChangeExperience}" />
                    </StackPanel>
                </Button>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource Bw-Transparent}"
                        BorderBrush="{DynamicResource Bw-Secondary}"
                        BorderThickness="2"
                        Margin="10"
                        Width="175">
                        <StackPanel>
                            <Image
                                Width="30"
                                Height="30"
                                Margin="0 10 0 0">
                                <Image.Source>
                                    <SvgImage Source="{DynamicResource HomePageProfile}" />
                                </Image.Source>
                            </Image>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Padding="0 10"
                                Text="{x:Static resx:AppResources.HomePage_Profile}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource Bw-Transparent}"
                        BorderBrush="{DynamicResource Bw-Secondary}"
                        BorderThickness="2"
                        Margin="10"
                        Width="175">
                        <StackPanel>
                            <Image
                                Width="30"
                                Height="30"
                                Margin="0 10 0 0">
                                <Image.Source>
                                    <SvgImage Source="{DynamicResource HomePageResourceManager}" />
                                </Image.Source>
                            </Image>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Padding="0 10"
                                Text="{x:Static resx:AppResources.HomePage_ResourceManager}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource Bw-Transparent}"
                        BorderBrush="{DynamicResource Bw-Secondary}"
                        BorderThickness="2"
                        Margin="10"
                        Width="175">
                        <StackPanel>
                            <Image
                                Width="30"
                                Height="30"
                                Margin="0 10 0 0">
                                <Image.Source>
                                    <SvgImage Source="{DynamicResource HomePageFeedback}" />
                                </Image.Source>
                            </Image>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Padding="0 10"
                                Text="{x:Static resx:AppResources.HomePage_Feedback}" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource Bw-Transparent}"
                        BorderBrush="{DynamicResource Bw-Secondary}"
                        BorderThickness="2"
                        Margin="10"
                        Width="175">
                        <StackPanel>
                            <Image
                                Width="30"
                                Height="30"
                                Margin="0 10 0 0">
                                <Image.Source>
                                    <SvgImage Source="{DynamicResource HomePageAbout}" />
                                </Image.Source>
                            </Image>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Padding="0 10"
                                Text="{x:Static resx:AppResources.HomePage_About}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>