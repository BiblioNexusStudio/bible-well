<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Loading resources here instead of at the application level allows global styles to also reference global resources.
        Example: `<Setter Property="Background" Value="{StaticResource InfoColor}" />`
        (where `InfoColor` would be defined in AppResources.axaml)
    -->
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/AppResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Design.PreviewWith>
        <!-- When it makes sense, keep this list updated with style examples to enable design previews -->
        <Border Padding="20">
            <StackPanel Spacing="15" Orientation="Vertical">
                <TextBlock Classes="h2">h2</TextBlock>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0 0 0 10" />
    </Style>

    <!-- Tiptap Styles -->
    <Style Selector="Border.tiptap-otn-section-border">
        <Setter Property="BorderBrush" Value="{DynamicResource Bw-LightGray}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="Border.tiptap-translation-options-border">
        <Setter Property="BorderBrush" Value="{DynamicResource Bw-DarkGray}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <Style Selector="TextBlock.tiptap-translation-options-header">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style Selector="TextBlock.tiptap-otn-default-option">
        <Setter Property="Background" Value="{DynamicResource Bw-Highlight}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="4,4,0,4" />
    </Style>

    <Style Selector="TextBlock.tiptap-footnote-text-block">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{DynamicResource Bw-Primary}" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="1,-4,1,0" />
    </Style>

    <Style Selector="TextBlock.tiptap-paragraph">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="Border.tiptap-blockquote-border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Bw-DarkGray}" />
        <Setter Property="Margin" Value="12,4,0,4" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- Buttons -->

    <Style Selector="Button.Primary" > </Style>

    <!-- FOREGROUND -->
    <Style Selector=":is(TextBlock).foreground-primary">
        <Setter Property="Foreground" Value="{DynamicResource Bw-Primary}" />
    </Style>
    <Style Selector=":is(TextBlock).foreground-success">
        <Setter Property="Foreground" Value="{DynamicResource Bw-Success}" />
    </Style>
    <Style Selector=":is(TextBlock).foreground-gray">
        <Setter Property="Foreground" Value="{DynamicResource Bw-LightGray}" />
    </Style>

    <!-- BACKGROUND -->
    <Style Selector="TextBlock.background-danger">
        <Setter Property="Background" Value="{DynamicResource Bw-Red}" />
    </Style>

    <!-- TEXT -->
    <Style Selector="TextBlock.wrap">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <!-- FONTS -->

    <!-- Weights -->
    <Style Selector="TextBlock.font-thin">
        <Setter Property="FontWeight" Value="Thin" />
    </Style>
    <Style Selector="TextBlock.font-extralight">
        <Setter Property="FontWeight" Value="ExtraLight" />
    </Style>
    <Style Selector="TextBlock.font-light">
        <Setter Property="FontWeight" Value="Light" />
    </Style>
    <Style Selector="TextBlock.font-normal">
        <Setter Property="FontWeight" Value="Normal" />
    </Style>
    <Style Selector="TextBlock.font-medium">
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    <Style Selector="TextBlock.font-semibold">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style Selector="TextBlock.font-bold">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style Selector="TextBlock.font-extrabold">
        <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>
    <Style Selector="TextBlock.font-black">
        <Setter Property="FontWeight" Value="Black" />
    </Style>


    <!-- Sizes -->
    <!-- Tailwind-style font size utility classes -->
    <Style Selector="TextBlock.font-xs">
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="TextBlock.font-sm">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Selector="TextBlock.font-base">
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style Selector="TextBlock.font-lg">
        <Setter Property="FontSize" Value="18" />
    </Style>
    <Style Selector="TextBlock.font-xl">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style Selector="TextBlock.font-2xl">
        <Setter Property="FontSize" Value="24" />
    </Style>
    <Style Selector="TextBlock.font-3xl">
        <Setter Property="FontSize" Value="30" />
    </Style>
    <Style Selector="TextBlock.font-4xl">
        <Setter Property="FontSize" Value="36" />
    </Style>
    <Style Selector="TextBlock.font-5xl">
        <Setter Property="FontSize" Value="48" />
    </Style>
    <Style Selector="TextBlock.font-6xl">
        <Setter Property="FontSize" Value="60" />
    </Style>
    <Style Selector="TextBlock.font-7xl">
        <Setter Property="FontSize" Value="72" />
    </Style>
    <Style Selector="TextBlock.font-8xl">
        <Setter Property="FontSize" Value="96" />
    </Style>
    <Style Selector="TextBlock.font-9xl">
        <Setter Property="FontSize" Value="128" />
    </Style>


    <!-- padding styles -->
    <Style Selector=":is(Decorator).p-8">
        <Setter Property="Padding" Value="8" />
    </Style>
    <Style Selector=":is(Decorator).p-0">
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- MARGINS -->
    <!-- All sides -->
    <Style Selector=":is(Control).m-0">
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style Selector=":is(Control).m-4">
        <Setter Property="Margin" Value="4" />
    </Style>
    <Style Selector=":is(Control).m-8">
        <Setter Property="Margin" Value="8" />
    </Style>
    <Style Selector=":is(Control).m-16">
        <Setter Property="Margin" Value="16" />
    </Style>
    <Style Selector=":is(Control).m-32">
        <Setter Property="Margin" Value="32" />
    </Style>
    <Style Selector=":is(Control).m-64">
        <Setter Property="Margin" Value="64" />
    </Style>


    <!-- Top only -->
    <Style Selector=":is(Control).mt-8">
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>
    <Style Selector=":is(Control).mt-16">
        <Setter Property="Margin" Value="0,16,0,0" />
    </Style>

    <!-- Bottom only -->
    <Style Selector=":is(Control).mb-8">
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    <Style Selector=":is(Control).mb-16">
        <Setter Property="Margin" Value="0,0,0,16" />
    </Style>

    <!-- Left only -->
    <Style Selector=":is(Control).ml-8">
        <Setter Property="Margin" Value="8,0,0,0" />
    </Style>
    <Style Selector=":is(Control).ml-16">
        <Setter Property="Margin" Value="16,0,0,0" />
    </Style>

    <!-- Right only -->
    <Style Selector=":is(Control).mr-8">
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>
    <Style Selector=":is(Control).mr-16">
        <Setter Property="Margin" Value="0,0,16,0" />
    </Style>

    <!-- Horizontal (X-axis) -->
    <Style Selector=":is(Control).mx-2">
        <Setter Property="Margin" Value="2,0,2,0" />
    </Style>
    <Style Selector=":is(Control).mx-8">
        <Setter Property="Margin" Value="8,0,8,0" />
    </Style>
    <Style Selector=":is(Control).mx-16">
        <Setter Property="Margin" Value="16,0,16,0" />
    </Style>

    <!-- Vertical (Y-axis) -->
    <Style Selector=":is(Control).my-8">
        <Setter Property="Margin" Value="0,8,0,8" />
    </Style>
    <Style Selector=":is(Control).my-16">
        <Setter Property="Margin" Value="0,16,0,16" />
    </Style>
</Styles>